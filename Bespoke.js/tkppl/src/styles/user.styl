body{
    background-color: black;
    color: white;
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
}

/* UNTUK BAGIAN HEADER */
header{
    width: inherit;
    background-color: rgba(51,51,51,0.5);
    padding: 0 80px;
    text-align: center;
    margin: 0px;
    height: 80px;
}

header div.player1{
    float: left;
    margin: 30px 10px;
    font-size: 20px;
}

header div.player2{
    float: right;
    margin: 30px 10px;
    font-size: 20px;
}
 

/* BAGIAN DALAM CONTAINER */
div.container{
    width: inherit;
    padding: 20px 0;
    
}

/* BOARD */
div#board{
    width: 665px;
    margin: 0 auto;
    text-align: center;
}

table{
    border-collapse: collapse;
}

div#board table tr td{
    width: 65px;
    height: 32px;
    text-align: center;
    font-weight: bold;
    border: 1px solid royalblue;
    cursor: pointer;
}

/* INI STYLE YANG DIBAGIAN KIRI (O Turn) dan KANAN (X Turn)*/
div.container div#oturn{
    float: left;
    margin-left: 50px;
    padding: 205px 100px;
    text-align: center;
    font-size: 50px;
    color: #ee82ee;
}

div.container div#xturn{
    float: right;
    margin-right: 80px;
    padding: 205px 100px;
    text-align: center;
    font-size: 50px;
    visibility: hidden;
    color: #ffff31;
}



